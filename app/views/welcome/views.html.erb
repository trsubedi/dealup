<h1 class="transbox search-font"> Search Items</h1>
  <%= form_tag(:method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search items", class: "form-control" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
       <%= text_field_tag :search, params[:search], placeholder: "Enter Location", class: "form-control" %>    
      <%= submit_tag "Search", class: "btn btn-default" %>
    </div>
  <% end %>
<div>
	Browse:
	<% @category.each do |f| %>
    <h3><%= f.name %></h3>
    <% end %>
</div>
